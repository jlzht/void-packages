# Template file for 'swww'
pkgname=swww
version=0.8.2
revision=1
build_style=cargo
hostmakedepends="scdoc pkg-config"
makedepends="libxkbcommon-devel"
depends="lz4"
short_desc="A Solution to your Wayland Wallpaper Woes"
maintainer="jlzht <jl.zht@proton.me>"
license="GPL-3.0-or-later"
homepage="https://github.com/LGFae/swww"
changelog="${homepage}/raw/main/CHANGELOG.md"
distfiles="${homepage}/archive/refs/tags/v${version}.tar.gz"
checksum=6733cda771a0e635dbd00f7aef78ed60f1ccdf640647ecfe02d0cdfdef996b68

post_build() {
	./doc/gen.sh
}

post_install() {
	for f in doc/generated/*.?; do
		vman $f
	done
	
  vcompletion completions/swww.bash bash
  vbin target/${RUST_TARGET}/release/swww-daemon
	vlicense LICENSE
}
